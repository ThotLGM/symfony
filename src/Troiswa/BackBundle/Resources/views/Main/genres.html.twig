{% extends 'TroiswaBackBundle::layout.html.twig' %}
{% block titre %}
    Les genres
    {{ parent() }}
{% endblock %}
{% block css %}
    {{ parent() }}
{% endblock %}
{% block central %}
    {% block menuGenres %}class="active"{% endblock %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Tous les Genres ({{ genres|length }})
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path('troiswa_back_admin') }}">Dashboard</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-tags"></i> Genres
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <h2>Bordered Table</h2>
                    {% for message in app.session.flashbag.get('success_genre') %}
                        <p class="alert alert-success">{{ message }}</p>
                    {% endfor %}
                    <div class="table-responsive">
                        <a class="btn btn-primary" href="{{ path('troiswa_back_genre_creation') }}">Cr√©er un nouveau genre</a>
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Type</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for genre in genres %}
                            <tr>
                                <td>{{ genre.id }}</td>
                                <td>{{ genre.type|capitalize }}</td>
                                 <td>
                                    <a class="btn btn-success" href="{{ path('troiswa_back_info_genres',{'id':genre.id}) }}">Voir</a>
                                     <a class="btn btn-primary" href="{{ path('troiswa_back_genre_modif',{'id':genre.id}) }}">modifier</a>
                                     <a class="btn btn-danger"  href="{{ path('troiswa_back_genre_suppr',{'id':genre.id}) }}">supprimer</a>
                                 </td>
                            </tr>{% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.row -->


        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}
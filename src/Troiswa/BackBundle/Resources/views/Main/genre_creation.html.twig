{% extends 'TroiswaBackBundle::layout.html.twig' %}
{% block titre %}
    Creation genre
    {{ parent() }}
{% endblock %}
{% block css %}
    {{ parent() }}
{% endblock %}
{% block central %}
    {% block menuGenres %}class="active"{% endblock %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Création genre
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path('troiswa_back_admin') }}">Dashboard</a>
                        </li>
                        <li>
                            <i class="fa fa-tags"></i>  <a href="{{ path('troiswa_back_genres') }}">Genres</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-user-facetime-video"></i> Création genre
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="table-responsive">
                        {{ form_start(formGenre, {'attr':{'novalidate':'novalidate'}}) }}
                            <div class="form-group">
                                {{ form_label(formGenre.type, 'Type') }}
                                {{ form_widget(formGenre.type, {'attr':{'class':'form-control'}}) }}
                                {% if form_errors(formGenre.type) is not empty %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(formGenre.type) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(formGenre.description, 'Description', {'label_attr':{'class':'test'}}) }}
                                {{ form_widget(formGenre.description, {'attr':{'class':'form-control'}}) }}
                                {% if form_errors(formGenre.description) is not empty %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(formGenre.description) }}
                                    </div>
                                {% endif %}
                            </div>
                            {{ form_widget(formGenre.ajouter, {'attr':{'class':'btn btn-default'}}) }}
                        {{ form_end(formGenre) }}
                    </div>
                </div>
            </div>
            <!-- /.row -->


        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}
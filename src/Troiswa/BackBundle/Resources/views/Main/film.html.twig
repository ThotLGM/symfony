{% extends 'TroiswaBackBundle::layout.html.twig' %}
{% block titre %}
    {{ film.titre|capitalize }}
    {{ parent() }}
{% endblock %}
{% block css %}
    {{ parent() }}
{% endblock %}
{% block central %}
    {% block menuFilms %}class="active"{% endblock %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Film
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path('troiswa_back_admin') }}">Dashboard</a>
                        </li>
                        <li>
                            <i class="fa fa-film"></i>  <a href="{{ path('troiswa_back_films') }}">Films</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-video"></i> Film
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <h2>Bordered Table</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Titre</th>
                                <th>Note</th>
                                <th>Date r√©alisation</th>
                                <th>Genre</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>{{ film.id }}</td>
                                <td>{{ film.titre }}</td>
                                <td>{{ film.note }}</td>
                                <td>{{ film.dateDeRealisation|date("m/d/Y") }}</td>
                                <td>{{ film.liaisonGenre.type }}</td>
                                <td><img width="200px" class="img-thumbnail" src="{{ asset(film.displayImage) }}"</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.row -->


        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}